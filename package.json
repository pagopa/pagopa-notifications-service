{
  "name": "pagopa-notifications-service",
  "version": "0.1.0",
  "description": "POC for pagopa-notifications-service",
  "repository": "https://github.com/pagopa/pagopa-notifications-service",
  "author": "https://pagopa.gov.it",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist && yarn generate",
    "build": "tsc && cp -r src/templates dist/src",
    "postversion": "git push && git push --tags",
    "generate": "npm-run-all generate:*",
    "generate:definitions": "rimraf ./src/generated/definitions && shx mkdir -p ./src/generated/definitions && gen-api-models --api-spec ./api-spec/index.yaml --no-strict --out-dir ./src/generated/definitions --request-types",
    "generate:template-schemas": "find src/templates/*/*.json -exec yarn run iotsfjs --inputFile {} --outputDir src/generated \\;",
    "test": "jest",
    "start": "node dist/src/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/src/index.js\"",
    "lint": "eslint . -c .eslintrc.js --ext .ts,.tsx"
  },
  "devDependencies": {
    "@pagopa/danger-custom-rules": "^2.0.3",
    "@pagopa/eslint-config": "^1.3.1",
    "@pagopa/openapi-codegen-ts": "^11.2.0",
    "@types/express": "^4.17.13",
    "@types/handlebars-helpers": "^0.5.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^18.0.6",
    "@types/node-fetch": "^2.6.2",
    "@types/node-forge": "^1.0.4",
    "@types/nodemailer": "^6.4.4",
    "concurrently": "^7.2.2",
    "danger": "^11.0.7",
    "danger-plugin-digitalcitizenship": "*",
    "eslint-plugin-prettier": "^3.1.1",
    "i": "^0.3.7",
    "jest": "^25.2.7",
    "nodemon": "^2.0.19",
    "npm": "^8.14.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "shx": "^0.3.4",
    "ts-jest": "^25.3.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.131.0",
    "@azure/storage-queue": "^12.0.0",
    "@pagopa/ts-commons": "^10.7.1",
    "applicationinsights": "^2.3.4",
    "aws-sdk": "^2.1176.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "fp-ts": "^2.12.1",
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "io-ts": "^2.2.16",
    "io-ts-from-json-schema": "^0.0.21",
    "node-forge": "^1.3.1",
    "nodemailer": "^6.7.7",
    "puppeteer": "^15.4.0",
    "winston": "^3.8.1"
  }
}
