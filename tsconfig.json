{
  "compilerOptions": {
    "target": "es2017",
    "rootDir": ".",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["dom"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@dist/*":["dist/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
